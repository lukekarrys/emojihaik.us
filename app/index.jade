html(lang="en")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    title Emoji Haikus
    meta(name="description", content="Get your emoji haiku")
    meta(name="author", content="Luke Karrys")

    meta(name="viewport", content="width=device-width,initial-scale=1.0,maximum-scale=1.0")
    meta(name='apple-mobile-web-app-capable', content='yes')
    meta(name='apple-mobile-web-app-status-bar-style', content='black')
    meta(name='apple-mobile-web-app-title', content='Emoji Haikus')

    link(rel='apple-touch-icon-precomposed', href='/ios.png', sizes='152x152')
    link(rel='shortcut icon', href='/favicon.ico')
    link(rel='icon', href='/favicon.ico')

    link(rel='stylesheet', type='text/css', href='http://fonts.googleapis.com/css?family=Quicksand:400,700')
    link(rel='stylesheet', type='text/css', href=locals.resourcePrefix + locals.cssFileName)
    script(src=locals.resourcePrefix + locals.jsFileName)

  body
    #bg
    .content
        .centered
            header
              h1#title
                span#haikuText
            #haiku
    .actions
      a#tweetButton(target="_blank", href="#") Tweet It
      button#copy(type="button", data-text="") Copy
      button#refresh(type="button") Give Me a New One
    footer
      p
        | Made by 
